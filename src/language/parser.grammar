@top Program { Statement* }

Statement { Move | Turn | Repeat }

Move { "move" number "steps" }

Turn { "turn" direction }

Repeat { "repeat" number "times" Statement* "end" }

@tokens {
  number { @digit+ }
  direction { "left" | "right" }
  comment { "#" ![\n]* }
  space { @whitespace+ }
  "move" "steps"
  "turn"
  "repeat" "times" "end"
}

@skip { space | comment }

@detectDelim
